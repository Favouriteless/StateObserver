{
    "schemaVersion": 1,
    "id": "stateobserver",
    "version": "${version}",
    "name": "StateObserver",
    "description": "Observing blockstate changes over a large area without a performance hit.",
    "authors": [
        "Favouriteless"
    ],
    "contact": {
        "homepage": "https://github.com/Favouriteless/StateObserver"
    },
    "license": "MIT",
    "icon": "stateobserver.png",
    "environment": "*",
    "entrypoints": {
        "main": [
          "net.favouriteless.stateobserver.StateObserverFabric"
        ]
    },
    "mixins": [
        "stateobserver.mixins.json",
        "stateobserver.fabric.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=${fabric_loader_version}",
        "fabric": "*",
        "minecraft": "${minecraft_version}",
        "java": ">=17"
    }
}
  